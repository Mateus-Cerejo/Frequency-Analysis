(ql:quickload "fiveam")

(defpackage :load-test
  (:use :cl :fiveam :load))

(in-package :load-test)

(def-suite load-data-tests
  :description "Tests for the load file")

(in-suite load-data-tests)

(test load-data-test
    (let ((pathname "~/Projects/SI-Project/test/data/test.txt")
	  (result ""))
      (data pathname result)
      (format t "~%Result: ~a~%" result)
      (is (equal result "This is a test file.") "The data function should load the content of the file into str")))

(def-test load-map-test
  )

(run! 'load-data-tests)
